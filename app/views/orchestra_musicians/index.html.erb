<%= link_to "Welcome Page", "/" %>
<%= link_to "Musicians Index", "/musicians" %>
<%= link_to "Orchestras Index", "/orchestras" %>

<h1>Orchestra Musicians Index</h1>

<%= link_to "Create Musician", "/orchestras/#{@orchestra.id}/musicians/new" %><br/>

<br><%= link_to "Sort By Name Alphabetically", "/orchestras/#{@orchestra.id}/musicians?sort=name" %>

<%= link_to "Sort by Threshold", "/orchestras/#{@orchestra.id}/musicians/threshold" %>

<% @musicians.each do |musician| %>
  <h2><%= link_to "#{musician.name}", "/musicians/#{musician.id}" %></h2>
  <p>Full Time: <%= musician.full_time %></p>
  <p>Years Involved: <%= musician.years_involved %></p>
  <%= link_to "Update #{musician.name}", "/musicians/#{musician.id}/edit"%><br/>
  <br><%= button_to "Delete #{musician.name}", "/musicians/#{musician.id}", method: :delete %>
  <p>~*~*~*~*~*~*~*~*~*~*~*~*~*~*~*~</p>
<% end %>